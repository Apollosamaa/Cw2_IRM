@model Cw2.Models.Profile

@if (Model != null)
{
    <div class="profile-container">
        <div class="profile-header">
            <div class="name-and-bio">
                <h3>@($"{Model.ProfileFname ?? "Unknown"} {Model.ProfileLname ?? "Unknown"}")</h3>
                @if (!string.IsNullOrEmpty(Model.ProfileBio))
                {
                    <h6>@Model.ProfileBio</h6>
                }
            </div>
            <div class="profile-info-and-button d-flex justify-content-between align-items-center">
                <div class="profile-info">
                    @if (Model.ProfileDob.HasValue)
                    {
                        <span class="info-bubble">Birthday: @Model.ProfileDob.Value.ToString("yyyy-MM-dd")</span>
                    }

                    @if (Model.ProfileWeight.HasValue)
                    {
                        <span class="info-bubble">Weight: @Model.ProfileWeight.Value</span>
                    }

                    @if (Model.ProfileHeight.HasValue)
                    {
                        <span class="info-bubble">Height: @Model.ProfileHeight.Value</span>
                    }

                    @if (Model != null && Model.ProfileLocationNavigation != null)
                    {
                        <span class="info-bubble">Location: @Model.ProfileLocationNavigation.LocationName</span>
                    }
                </div>
                <div class="ml-auto">
                    <a href="@Url.Action("EditProfile", "Profile")" class="btn btn-primary">Edit Profile</a>
                </div>
            </div>
        </div>

        <div class="profile-body">
            <div class="profile-sidebar">
                <!-- Left side - Picture, Friends, Achievements -->
                <h3>Sidebar Section</h3>
                <!-- Add content for sidebar -->
            </div>

            <div class="profile-feed">
                <!-- Right side - Post Feed -->
                <h3>Feed Section</h3>
                <!-- Add content for feed -->
            </div>
        </div>
    </div>
}
else
{
    <p>Profile not found</p>
}
