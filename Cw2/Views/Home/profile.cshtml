@model Cw2.Models.ProfileModel

<div class="profile-container">
    <div class="profile-header">
        <h3>@Model.Email</h3> <!-- Assuming Email is equivalent to username for your project -->

        <div class="profile-info">
            @if (!string.IsNullOrEmpty(Model.FirstName) || !string.IsNullOrEmpty(Model.LastName))
            {
                <h5>@Model.FirstName @Model.LastName</h5>
            }

            <div class="optional-info">
                @if (Model.DateOfBirth.HasValue)
                {
                    <span class="info-bubble">Birthday: @Model.DateOfBirth.Value.ToString("yyyy-MM-dd")</span>
                }
                @if (!string.IsNullOrEmpty(Model.Location))
                {
                    <span class="info-bubble">Location: @Model.Location</span>
                }
                @if (Model.Weight.HasValue)
                {
                    <span class="info-bubble">Weight: @Model.Weight.Value</span>
                }
                @if (Model.Height.HasValue)
                {
                    <span class="info-bubble">Height: @Model.Height.Value</span>
                }
                <!-- Add more optional details as needed -->
            </div>
        </div>
    </div>

    <div class="profile-body">
        <div class="profile-sidebar">
            <!-- Left side - Picture, Friends, Achievements -->
            <h3>Sidebar Section</h3>
            <!-- Add content for sidebar -->
        </div>

        <div class="profile-feed">
            <!-- Right side - Post Feed -->
            <h3>Feed Section</h3>
            <!-- Add content for feed -->
        </div>
    </div>
</div>
